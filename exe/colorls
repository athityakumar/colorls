#!/usr/bin/env ruby
# frozen_string_literal: true

# workaround https://github.com/rubygems/rubygems/issues/3087

# rubocop:disable Style/GlobalVars
$loading = true

class Dir
  @@old_pwd = singleton_method(:pwd) # rubocop:disable Style/ClassVars

  def self.pwd
    @@old_pwd.call
  rescue Errno::ENOENT => e
    return '/' if $loading

    raise e
  end
end

require 'colorls'

$loading = false
# rubocop:enable Style/GlobalVars

exit_status_code = ColorLS::Flags.new(*ARGV).process
exit exit_status_code unless exit_status_code.zero?
